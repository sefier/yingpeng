	<files>
		<filename>component.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>		
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
		<folder>css</folder>
		<folder>fields</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>img</folder>		
		<folder>language</folder>
		<folder>scripts</folder>
	</files>
	<positions>
		<position>logo</position>
		<position>mainmenu</position>
		<position>slideshow</position>
		<position>bottom</position>
		<position>home-c-l</position>
		<position>home-c-r</position>
		<position>latest</position>
		<position>news</position>
		<position>contact</position>
		<position>footer</position>
		<position>debug</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_jf_calla-exteriors.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_jf_calla-exteriors.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced" addfieldpath="/templates/jf_calla-exteriors/fields/">
				
				<field name="logoas" type="list" default=""
					label="Logo"
					description="Select an option">
						<option value="1">Use as image</option>
  						<option value="2">Use as text</option>
				</field>

				<field name="logo" type="media"
					label="Logo Image" description="TPL_JF_CALLA-EXTERIORS_FIELD_LOGO_DESC" />

				<field name="sitetitle" type="text" default="Vihrea"
					label="TPL_JF_CALLA-EXTERIORS_FIELD_SITETITLE_LABEL"
					description="TPL_JF_CALLA-EXTERIORS_FIELD_SITETITLE_DESC"
					filter="string" />
					
				<field name="social" type="radio" default="1"
					label="Show Social Button"
					description="Select an option">
						<option value="0">No</option>
  						<option value="1">Yes</option>
				</field>
				
				<field name="facebookicon" type="radio" default="1"
					label="Show Facebook Icon"
					description="Select an option">
						<option value="0">No</option>
  						<option value="1">Yes</option>
				</field>
				
				<field name="facebooklink" type="text" default=""
					label="Facebook Link"
					description="Please add your facebook link here"
					filter="string" />
					
				<field name="flickricon" type="radio" default="1"
					label="Show Flickr Icon"
					description="Select an option">
						<option value="0">No</option>
  						<option value="1">Yes</option>
				</field>
				
				<field name="flickrlink" type="text" default=""
					label="Flickr Link"
					description="Please add your flickr link here"
					filter="string" />
					
				<field name="googleicon" type="radio" default="1"
					label="Show Google Plus Icon"
					description="Select an option">
						<option value="0">No</option>
  						<option value="1">Yes</option>
				</field>
				
				<field name="googlelink" type="text" default=""
					label="Google Plus Link"
					description="Please add your Google Plus link here"
					filter="string" />
					
				<field name="skypeicon" type="radio" default="1"
					label="Show Skype Icon"
					description="Select an option">
						<option value="0">No</option>
  						<option value="1">Yes</option>
				</field>
				
				<field name="skypelink" type="text" default=""
					label="Skype Link"
					description="Please add your Skype link here"
					filter="string" />
				
				<field name="twittericon" type="radio" default="1"
					label="Show Twitter Icon"
					description="Select an option">
						<option value="0">No</option>
  						<option value="1">Yes</option>
				</field>
				
				<field name="twitterlink" type="text" default=""
					label="Twitter Link"
					description="Please add your twitter link here"
					filter="string" />
				
				<field name="pinteresticon" type="radio" default="1"
					label="Show Pinterest Icon"
					description="Select an option">
						<option value="0">No</option>
  						<option value="1">Yes</option>
				</field>
				
				<field name="pinterestlink" type="text" default=""
					label="Pinterest Link"
					description="Please add Pinterest link here"
					filter="string" />
					
				<field name="youtubeticon" type="radio" default="1"
					label="Show Youtube Icon"
					description="Select an option">
						<option value="0">No</option>
  						<option value="1">Yes</option>
				</field>
				
				<field name="youtubelink" type="text" default=""
					label="Youtube Link"
					description="Please add Youtube link here"
					filter="string" />
				
				<field name="map" type="radio" default="1"
					label="Use map in contact"
					description="Select an option">
						<option value="0">No</option>
  						<option value="1">Yes</option>
				</field>
					
				<field name="latitude" type="text" default="51.508742"
					label="Latitude"
					description="Latitude"
					filter="string" />
					
				<field name="longitude" type="text" default="-0.120850"
					label="Longitude"
					description="Longitude"
					filter="string" />
					
				<field name="marker" type="radio" default="1"
					label="Publish this marker"
					description="Select an option">
						<option value="0">No</option>
  						<option value="1">Yes</option>
				</field>
				
				<field name="markerdescription" type="textarea" default=""
					label="Description for marker"
					description="Enter plain text for a description on the maker." 
					rows="5" cols="30" filter="safehtml" />
					
				<field name="longlat" type="map" label="Google Map" description="" ></field>

			</fieldset>
		</fields>
	</config>
</extension>
